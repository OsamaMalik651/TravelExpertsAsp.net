@model Travel_Experts__Workshop_4.Domain.Booking

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center m-3">Modify Booking</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <div class="form-group mt-2">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" value="@Model.BookingDate.Value.ToShortDateString()"  type ="datetime" readonly />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="BookingNo" class="control-label"></label>
                <input asp-for="BookingNo" class="form-control" readonly/>
                <span asp-validation-for="BookingNo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TravelerCount" class="control-label"></label>
                <input asp-for="TravelerCount" class="form-control" />
                <span asp-validation-for="TravelerCount" class="text-danger"></span>
            </div>
            <div class="form-group mt-2"> 
                <input class="form-control" asp-for ="CustomerId" hidden readonly>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TripTypeId" class="control-label"></label>
                <select asp-for="TripTypeId" class="form-control" asp-items="ViewBag.TripTypeId"></select>
                <span asp-validation-for="TripTypeId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PackageId" class="control-label"></label>
                <select asp-for="PackageId" class="form-control" asp-items="ViewBag.PackageId"></select>
                <span asp-validation-for="PackageId" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Save" class="btn btn-outline-info " />
            </div>
            <div class="form-group text-center mt-3">
                <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="User">Back to Profile Page</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
