<h1 class="display-4 my-5 text-center">Our Travel Packages</h1>
<h3 class=" px-4 py-1 my-1 text-center">Some of our favorite destinations!</h3>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Discover your new favorite vacation destination.</p>
    <a asp-controller="User" asp-action="Index"> Accounts Page</a>



<div class="conatiner shadow-lg my-3 p-3 rounded">
<div class="#mycard row justify-content-center d-flex rounded">
    @foreach (var item in @Model.Packages)
    {
        <div class="card m-5 p-3 d-flex align-self-stretch" style="width: 25rem;">
            <div class="d-flex flex-fill shadow">
                @*<img src="\wwwroot\images\2_maldives.jpg" alt=" " class="card-img-top" >*@
                <div class="card-body text-center d-flex flex-column mt-auto">
                    @*<p class="card-title fs-2 text-center justify-self-end">"@item.PkgName"</p>*@
                    <p>@item.PkgName</p>
                    <p class="card-text text-center justify-self-end"></p>
                    <p>@item.PkgDesc</p>
                    <p class="card-text text-center justify-self-end"></p>
                    <p>$@item.PkgBasePrice</p>

                    <a class="btn btn-outline-primary" asp-controller="Packages" asp-action="Details" asp-route-id="@item.PackageId"> Package Details</a>
                </div>
            </div>
        </div>

    }
</div>
</div>
