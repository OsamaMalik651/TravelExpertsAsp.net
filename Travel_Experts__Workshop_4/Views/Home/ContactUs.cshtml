    <div class="container shadow d-flex flex-column p-3 col-sm-12 col-lg-6" style="width: 100%;">

        <h1 class="text-center">Our Office Locations</h1>

            <div class="container-fluid">
                <div class="#mycard row justify-content-center align-items-start d-flex bg-dark rounded">
                    @foreach (var item in @Model.Agency)
                    {
                        <div class="card bg-light m-3" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title"><span asp-for="@item.AgncyCity"></span>Office</h5>
                                <label asp-for="@item.AgncyAddress" class="control-label"></label>
                                <input asp-for="@item.AgncyAddress" class="form-control" />
                                <label asp-for="@item.AgncyCity" class="control-label"></label>
                                <input asp-for="@item.AgncyCity" class="form-control" />
                                <label asp-for="@item.AgncyProv" class="control-label"></label>
                                <input asp-for="@item.AgncyProv" class="form-control" />
                                <label asp-for="@item.AgncyPostal" class="control-label"></label>
                                <input asp-for="@item.AgncyPostal" class="form-control" />
                                <label asp-for="@item.AgncyCountry" class="control-label"></label>
                                <input asp-for="@item.AgncyCountry" class="form-control" />
                                <label asp-for="@item.AgncyPhone" class="control-label"></label>
                                <input asp-for="@item.AgncyPhone" class="form-control" />
                                <label asp-for="@item.AgncyFax" class="control-label"></label>
                                <input asp-for="@item.AgncyFax" class="form-control" />
                            </div>
                        </div>
                    }
                </div>
            </div>
    </div>


    Agent contact information

    <div class="container-fluid">
        <h1 class="text" style="text-align: center;"> Our Team</h1>
        <div class="container-fluid d-flex flex-row bg-dark flex-wrap mr-auto justify-content-sm-center justify-content-lg-center">
            @foreach (var item in @Model.Agents)
            {
                <div class="card.bg-white.m-3" style='width: 18rem;'>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <label asp-for="@item.AgtFirstName" class="control-label"></label>
                        <input asp-for="@item.AgtFirstName" class="form-control" />
                        <label asp-for="@item.AgtLastName" class="control-label"></label>
                        <input asp-for="@item.AgtLastName" class="form-control" />
                        <h6 class="card-.subtitle mt-2 mb-1 Email:"></h6>
                        <label asp-for="@item.AgtEmail" class="control-label"></label>
                        <input asp-for="@item.AgtEmail" class="form-control" />
                        <p class="card-text mt-3" style="margin-bottom:0"></p>
                        <label asp-for="@item.AgtBusPhone" class="control-label"></label>
                        <input asp-for="@item.AgtBusPhone" class="form-control" />
                        <p class="card-text" style="margin-bottom:0"></p>
                        <label asp-for="@item.AgtPosition" class="control-label"></label>
                        <input asp-for="@item.AgtPosition" class="form-control" />
                    </div>
                </div>
            }
        </div>
    </div>



    Contact form
    <div class="container-fluid shadow d-flex flex-column p-3 mb-5 col-sm-12 col-lg-6" style="width: 100%;">
        <div class="container-fluid d-flex flex-column p-3 col-sm-12 col-lg-6" style="width: 50%;">
            <h1 class="" style="text-align: center;"></h1>
        </div>
    </div>

    | Send us your questions below.
    <h5 class="" style="text-align: center; color: white"></h5>
    |Enter your details and query and we will
    |reach out to you
    form#contact(action='/contact' method='POST')
    <div class="mb-3.mt-3">
        <div class="label form-label fs-5" for='contactFormName' Name>
            <div class="input#contactFormName form-control" type='text' placeholder='Enter your Name here' name='Name'>
                <div class="mb-3.mt-3">
                    <div class="label form-label fs-5" for='contactFormName' Email>
                        <div class="input#contactFormEmail form-control" type='email' placeholder='name@example.com' name='Email'>
                            <div class="mb-3">
                                <div class="label form-label fs-5" for='contactFormQuery' Query>
                                    <div class="textarea#contactFormQuery form-control" rows='3' name='Query' maxlength='400'>
                                        <div class="d-grid.mt-3 mb-3 gap-3 col-6 mx-auto">
                                            <button class="btn-primary btn-block text-white" type='submit' form='contact'>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    | Submit
    if errors
    each error in errors
    p #{error}




